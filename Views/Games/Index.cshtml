@model IEnumerable<SystemWypozyczalniGier.Tables.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Accessibility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pegi)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.MainPhotoName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Photo1Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Photo2Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Photo3Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Photo4Name)
            </th>

            <th></th>


        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityInStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accessibility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pegi)
            </td>

            <td>
                <img src="~/uploads/@item.MainPhotoName"/>
            </td>

            <td>
                <img src="~/uploads/@item.Photo1Name"/>
            </td>

            <td>
                <img src="~/uploads/@item.Photo2Name"/>
            </td>

            <td>
                <img src="~/uploads/@item.Photo3Name"/>
            </td>

            <td>
                <img src="~/uploads/@item.Photo4Name"/>
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.GameId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GameId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GameId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
