@model SystemWypozyczalniGier.Tables.Rental

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rental</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountEmail" class="control-label"></label>
                <select asp-for="AccountEmail" class ="form-control" asp-items="ViewBag.AccountEmail"></select>
            </div>
            <div class="form-group">
                <label asp-for="GameId" class="control-label"></label>
                <select asp-for="GameId" class ="form-control" asp-items="ViewBag.GameId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RentalStatus" class="control-label"></label>
                <select asp-for="RentalStatus" asp-items="@SystemWypozyczalniGier.Helpers.EnumerationsHelper.RentalsStatusSelectItems" class="form-control"></select>
                <span asp-validation-for="RentalStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalTime" class="control-label"></label>
                <input asp-for="RentalTime" class="form-control" />
                <span asp-validation-for="RentalTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
